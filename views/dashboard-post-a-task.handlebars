<script>
	$('#project_name').focus(() => {
		$('#project_name').removeClass('error-border');
	});

	$('#min_budget').focus(() => {
		$('#min_budget').removeClass('error-border');
	});

	$('#max_budget').focus(() => {
		$('#max_budget').removeClass('error-border');
	});

	$('#project_disc').focus(() => {
		$('#project_disc').removeClass('error-border');
	});	

	$('#task_btn').on('click', () => {
		const description = $('#project_disc').val();
		const isFixed = $('#radio-1').is(':checked');
		const isHourly = $('#radio-2').is(':checked');
		const minBudget = $('#min_budget').val();
		const maxBudget = $('#max_budget').val();
		const location = $('#autocomplete-input').val();
		const projectName = $('#project_name').val();
		const categoryId = $('#categories option:selected').val();
		const deadline = $('#project_deadline').val();
		const skills = [];
		$('.keyword-text').each((index, element) => {
			skills.push($(element).text());
		});
		if (!projectName) {
			$('#project_name').addClass('error-border');
			$('#project_name').attr('placeholder', 'Please Fill This Field');
		}
		if (!description) {
			$('#project_disc').addClass('error-border');
			$('#project_name').attr('value', 'Please Fill This Field');
		}
		if (minBudget && typeof parseInt(minBudget) !== 'number') {
			$('#min_budget').addClass('error-border');
			$('#min_budget').val('');
			$('#min_budget').text('');
			$('#min_budget').attr('placeholder', 'Please Use Numbers');
		}
		if (maxBudget && typeof parseInt(maxBudget) !== 'number') {
			$('#max_budget').addClass('error-border');
			$('#max_budget').val('');
			$('#max_budget').text('');
			$('#max_budget').attr('placeholder', 'Please Use Numbers');
		}
		const data = JSON.stringify({
					description,
					isFixed,
					isHourly,
					minBudget: minBudget || 0,
					maxBudget: maxBudget || 0,
					location,
					projectName,
					categoryId,
					skills,
		});
		if (projectName && description) {
			$.ajax({
				url: '/tasks',
				method: 'POST',
				contentType: 'application/json',
				data,
				success: (result, statudCode, xhr) => {
					$('success-message').text('Your Job Posted');
					$('#project_name').val('');
					$('#autocomplete-input').val('');
					$('#min_budget').val('');
					$('#max_budget').val('');
					$('#project_disc').val('');
					$('.keyword-text').remove();

				},
				error: (xhr, status, err) => {
					window.location = '/dashboard_settings';
				},
			});
		}
	});

	$('#logOut').on('click', () => {
		$.ajax({
			url: '/logout',
			method: 'GET',
			success: (data, status, xhr) => {
				window.location.href = '/';
			}
		});
	});
</script>

